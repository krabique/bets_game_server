<h2>Your accounts</h2>

<table class="table">
  <tbody>
    <% @accounts.each do |account| %>
      <tr id="<%= account.amount_currency %>">
        <td class="amount"><%= account.amount %></td>
        <td class="currency"><%= account.amount_currency %></td>
        <td><%= link_to (fa_icon "credit-card", text: 'Deposit / Withdraw'), edit_account_path(account) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to (fa_icon "plus-circle", text: 'Create a new account'),
  new_account_path %>
